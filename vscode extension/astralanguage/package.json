{
	"name": "astra",
	"displayName": "Astra",
	"description": "VS Code plugin for Astra Language Server",
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.91.0"
	},
	"categories": [
		"Programming Languages"
	],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"languages": [
			{
				"id": "Astra",
				"aliases": [
					"Astra"
				],
				"extensions": [
					".ac"
				],
				"configuration": "./language-configuration.json",
				"icon": {
					"light": "./icons/16x16.png",
					"dark": "./icons/16x16.png"
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/vscode": "^1.91.0",
		"@typescript-eslint/eslint-plugin": "^8.22.0",
		"@typescript-eslint/parser": "^8.22.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"eslint": "^9.19.0",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"vsce": "^2.15.0",
		"vscode-languageclient": "^9.0.1"
	}
}
